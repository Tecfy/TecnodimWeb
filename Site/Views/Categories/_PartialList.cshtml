@model IEnumerable<Model.VM.CategoriesVM>
@if (Model.Count() <= 0)
{
    <tr>
        <td colspan="5">@i18n.Resource.NoDataFound</td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div>
                    <a href="@Url.Action("Details", new { id = item.CategoryId })" title="@i18n.Resource.View">
                        <span data-feather="archive"></span>
                    </a>

                    <a href="@Url.Action("Edit", new { id = item.CategoryId  })" title="@i18n.Resource.Edit">
                        <span data-feather="edit"></span>
                    </a>

                    <a href="javascript:void(0);" id="id-btn-dialog2" class="btnDelete" data-id="@(item.CategoryId)" data-msg="@(string.Format(@i18n.Resource.ItemWillBeDeleted, item.Name))" title="@i18n.Resource.Delete">
                        <span data-feather="trash-2"></span>
                    </a>
                </div>
            </td>
        </tr>
    }
}
