@model Model.VM.CategoryVM

@{
    ViewBag.Title = i18n.Resource.DetailsCategory;
    ViewBag.Head = i18n.Resource.DetailsCategory;
}

@section headerScript{
    <script type="text/javascript">
        $(function () {
            $("html").on("click", ".btnCancel", function (e) {
                window.location = "@(Url.Action("Index", "Categories"))";
            });
        });
    </script>
}

<form>
    <div class="form-group">
        @Html.DisplayNameFor(model => model.Parent):
        @Html.DisplayFor(model => model.Parent)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Code):
        @Html.DisplayFor(model => model.Code)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Name):
        @Html.DisplayFor(model => model.Name)
    </div>
</form>

<div class="text-right">
    <a href="@Url.Action("Edit", "Categories", new { id = Model.CategoryId })" class="btn btn-outline-primary">@i18n.Resource.Edit</a>
    <button type="button" class="btn btn-outline-dark btnCancel">@i18n.Resource.Cancel</button>
</div>