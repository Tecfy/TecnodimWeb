@model Model.VM.UserVM

@{
    ViewBag.Title = i18n.Resource.DetailsUser;
    ViewBag.Head = i18n.Resource.DetailsUser;
}

@section headerScript{
    <script type="text/javascript">
        $(function () {
            $("html").on("click", ".btnCancel", function (e) {
                window.location = "@(Url.Action("Index", "Users"))";
            });
        });
    </script>
}

<form>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Name):
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Role):
        @Html.DisplayFor(model => model.Role)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Email):
        @Html.DisplayFor(model => model.Email)
    </div>

</form>

<div class="text-right">
    <a href="@Url.Action("Edit", "Users", new { id = Model.UserId })" class="btn btn-outline-primary">@i18n.Resource.Edit</a>
    <button type="button" class="btn btn-outline-dark btnCancel">@i18n.Resource.Cancel</button>
</div>